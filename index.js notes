// ------------------------------------------------------------ //

// math functions
console.log(Math.random() * yes.length)

console.log(yes[(Math.random() * yes.length)])
// ^^^ is undefined. math.floor rounds it down so it
// can console log

console.log(yes[Math.floor(Math.random() * yes.length)])

// ------------------------------------------------------------ //

let arrayy = [3,6,9,12,15,18,21]
let randomNum = Math.random() * arrayy.length
console.log(randomNum)
console.log(arrayy[Math.floor(randomNum)])
// Cleaner way to do it 
let randomNum2 = Math.floor(randomNum)
console.log(arrayy[randomNum2])

