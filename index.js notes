// VARIABLES = container for data to be used
// for later

// let = are mutuable / change
let number = 15
number = 10 
console.log(number)

// const = immutable / cannot change
const name = "Collin"
// name = "Vince"

// var = similar to 'let'
var number2 = 0 
number2 = 10 

// DATA TYPES

// Number
let x = 2
let y = 2.5
let z = x + y 
let b = 1000
console.log(2**4)

// Strings = sequence of characters
// '' OR " " OR ` `
const name2 = `Good Morning 
My Friend`
console.log(name2)

// Concatenation = adding 2 strings together
let sentence = 'Hello'
let sentence2 = 'Goodbye'
let sentence3 = sentence + ' ' + sentence2
let sentence4 = `Hi my name is Tao. ${sentence2}`
// ${} = template literal
console.log(sentence4)

let o = 200
let s = `${o}`
let num = '20000' // This is a string because it is in ''
let num2 = 20 // This is a number 
console.log(num + num2) // answer is 2000020 because it is not the same data type
const num3 = 10
console.log(num3)

// Booleans = true or false values

// Truthy = anything with value
// 1
// 'Great' (string with value)
// True


// Falsie = undefined; no value
// 0
// '' (string  with NO value)
// False
// Undefined
// Null

console.log(Boolean("false")) // true bc it's in a string

// what is an array

const emptyArr = []
console.log(emptyArr)
const lengthOfEmptyArray = emptyArr.length
console.log(lengthOfEmptyArray)

const mixArr = [1, 'Collin']
console.log(mixArr)

const nameArr = ["Lucycan", "Collin", "Mark"]
console.log(nameArr)
const lengthOfNameArr = nameArr.length
console.log(lengthOfNameArr)

// indexing an array
const hello = `Hi my name is ${nameArr[1]}`
console.log(hello)
console.log(nameArr[1])

// pushing (to add into an array)
nameArr.push("Cortez")
console.log(nameArr)
nameArr.push("ME")
console.log(nameArr)

// pop (to delete from an array)
console.log(nameArr.pop())
console.log(nameArr)


// how to index last element of an array
const oneTwoThree = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h' ]
console.log(oneTwoThree)
const FourFiveSix = oneTwoThree[oneTwoThree.length -1]
console.log(FourFiveSix)

