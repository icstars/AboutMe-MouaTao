// FOR LOOPS 
// It repeats a task or code a certain amount of
// times based on a condition  

// "i = 0" means the initilizer starts at 0. 
// "i < x.length" means that until i
// hits 5, 
// "i++" will continue to cycle through the array

// EXAMPLE OF "+=":
// let num = 5 
// num += 2 --> 7
// num += 2 --> 9 
// "+=" pretty much means num = num + 2

// i++ = iterater

// Traditional //

let arar = ['yes',2,3,4,5,6,7,8,9]
for (let i = 0; i < arar.length; i++) 
{
console.log(i)
}
// ^^^ Does not print the actual value
// of the element, only the position

let arrarr = ['yes', 'no', 'maybe'] 
for (let eyes = 0; eyes < arrarr.length; eyes++) 
{
console.log(arrarr[eyes])
}
// ^^^ DOES print the element


// FOR OF LOOP

for (char of arrarr )
{
console.log(char)
}
// ^^^ FASTER and CLEANER then the other one
// the "of" will help iterate your elements
// instead of doing []


// WHILE LOOP

// let j = 0
// while (j < 5)
// {
// console.log(j)
// j++ 
// put at the bottom so the position 
// starts with 0 instead of 1 
// }

let index = 0 
const homeworkArr = ['abc', 'def', 'hij', 'klm', 'nop']  
while (index < homeworkArr.length)
{
    console.log(homeworkArr[index])
    index++
}


